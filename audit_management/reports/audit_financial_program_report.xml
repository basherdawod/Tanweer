<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_print_finincial_report" model="ir.actions.report">
        <field name="name">Finincial Report</field>
        <field name="model">audit.financial.program</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">audit_management.report_audit_audit_financial_template</field>
        <field name="report_file">audit_management.report_audit_audit_financial_template</field>
        <field name="binding_model_id" ref="model_audit_financial_program"/>
        <field name="print_report_name">'Financial  - %s' % (object.name).replace('/', '')</field>
        <field name="binding_type">report</field>
    </record>


    <template id="report_audit_audit_financial_template">
        <t t-call="web.html_container">
            <style>
                .report-header { background-color: #87CEEB; color: white; padding: 10px; margin-bottom: 20px; }
                .info-box { background-color: #E6F3FF; border: 1px solid #87CEEB; padding: 10px; margin-bottom: 15px; }
                .info-box strong { color: #d3d3d3; }
                .expense-table th { background-color: #c7c7c7; color: white; }
                .expense-table tr:nth-child(even) { background-color: #ededed; }
                .total-table { background-color: #E6F3FF; }
                .total-table .border-black { border-top: 2px solid #c7c7c7; }

            </style>

            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h4 style="background-color: #c7c7c7;width=100%;padding:20px">Finincial Program:
                            <t t-esc="doc.name"/>
                        </h4>
                        <br/>

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-6 border-table " style="border: 2px solid; padding: 10px;">
                                <div class="row">
                                    <div class="col-4 cell">Name:</div>
                                    <div class="col-4 cell">
                                        <t t-esc="doc.name"/>
                                    </div>
                                    <div class="col-4 cell" dir="rtl">إسم العميل</div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-4 cell">Customer Name:</div>
                                    <div class="col-4 cell">
                                        <t t-esc="doc.partner_id.name"/>
                                    </div>
                                    <div class="col-4 cell" dir="rtl">اسم العميل</div>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-6 border-table" style="border: 2px solid; padding: 10px;">
                                <div class="row">
                                    <div class="col-4 cell">Fiscal Year End:</div>
                                    <div class="col-4 cell">
                                        <t t-esc="doc.data_fis_years_end"/>
                                    </div>
                                    <div class="col-4 cell" dir="rtl">نهاية السنة المالية</div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-4 cell"> Last Fiscal Year End:</div>
                                    <div class="col-4 cell">
                                        <t t-esc="doc.data_last_years_end"/>
                                    </div>
                                    <div class="col-4 cell" dir="rtl">أنهاية السنة المالية السابقة</div>
                                </div>
                        </div>
                    </div>
                    <br/>
                       

                        <table class="table table-bordered expense-table" style="padding:20px;width:100%;">
                            <thead style="background-color: #c7c7c7;">
                                <tr>
                                    <th style="padding:10px;width:20%;">Account Type</th>
                                    <th style="padding:10px;width:10%;">Type</th>
                                    <th style="padding:10px;width:50%;">This Year</th>
                                    <th style="padding:10px;width:20%;">Last Year</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.audit_lines_ids" t-as="test">
                                    <tr>
                                        <td style="padding:10px;width:20%;">
                                            <t t-esc="test.level_line_id.name"/>
                                        </td>
                                        <td style="padding:10px;width:10%;">
                                            <t t-esc="test.type"/>
                                        </td>
                                        <td style="padding:10px;width:50%">
                                            <t t-esc="test.balance_this"/>
                                        </td>
                                        <td style="padding:10px;width:20%;">
                                            <t t-esc="test.balance_last"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
            
                </t>
            </t>
        </t>
    </template>

</odoo>