<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="middel_expense_form" model="ir.ui.view">
            <field name="name">middel.expense</field>
            <field name="model">middel.expense</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>

                            <group>
                                <field name="charges"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="middel_expense_tree" model="ir.ui.view">
            <field name="name">middel.expense</field>
            <field name="model">middel.expense</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="charges"/>
                </tree>
            </field>
        </record>
        <record id="middel_expense_search_view" model="ir.ui.view">
            <field name="name">middel.expense</field>
            <field name="model">middel.expense</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="action_middel_expense" model="ir.actions.act_window">
            <field name="name">Middel expense</field>
            <field name="res_model">middel.expense</field>
            <field name="view_mode">tree,form,search,activity</field>
        </record>
    </data>
</odoo>
