<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="middel_east_form_view" model="ir.ui.view">
            <field name="name">middel.east.form.view</field>
            <field name="model">middel.east</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button string="Set To Draft" name="set_to_draft" type="object" class="oe_highlight"
                                invisible="status not in  ('c_complete' ,'approval','in_progress')" />
                         <button string="Conform" name="create_qrf" type="object" class="oe_highlight"
                                 />
                         <button string="Quotation" name="action_create_quotation" type="object" class="oe_highlight"
                                 />
                        <button string="Approval" name="action_approval" type="object" class="oe_highlight"/>

                        <button string="Complete" name="b_in_progress_to_c_complete" type="object" class="oe_highlight"/>

                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box" position="inside">
                              <button class="oe_stat_button" type="object"
                                name="action_view_middel_quotation" icon="fa-pencil-square-o">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                         <group>
                             <group >
                                <field name="partner_id"/>
                                <field name="phone"/>
                                <field name="address"/>
                                <field name="country_id" invisible="1"/>
                                <field name="state_id"/>
                                <field name="makani"/>
                                 <field name="petrol_Charges"/>
                             </group>
                             <group>
                                 <field name="date"/>
                                 <field name="currency_id" invisible="1"/>
                                <field name="approch"/>
                                 <field name="project"/>
                                <field name="customer_need_drawing"/>
                                <field name="customer_need_amc"/>
                                <field name="customer_need_cid"/>
                                <field name="customer_need_active"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="distance"/>
                                <field name="works_hours"/>
                            </group>
                            <group>
                                <field name="visits"/>
                                <field name="works_employee"/>
                                <field name="petrol_cost"/>
                            </group>
                        </group>
                        <group string="Responsible">
                            <group>
                                <field name="user_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                             <page name="customer_need" string="Customer Need" groups="middel_system_manegment.group_middel_east_manager">
                                <field name="customer_need" mode="tree,kanban">
                                    <tree editable="bottom" limit="200">
                                        <field name="product_category"/>
                                        <field name="product_sub"/>
                                        <field name="brand"/>
                                        <field name="product"/>
                                        <field name="description"/>
                                        <field name="model_no"/>
                                        <field name="quantity"/>
                                        <field name="cost_price"/>
                                        <field name="margin_percent"/>
                                        <field name="price" groups="middel_system_manegment.group_middel_east_manager" />
                                        <field name="price_total" sum="Total Amount" groups="middel_system_manegment.group_middel_east_manager" />
                                    </tree>
                                </field>
                            </page>
                             <page name="team_work" string="Team Work" groups="middel_system_manegment.group_middel_east_manager">
                                <field name="team_work" mode="tree,kanban">
                                    <tree editable="bottom" limit="200">
                                        <field name="name"/>
                                        <field name="team_id"/>
                                        <field name="time_work"/>
                                        <field name="time_cost"/>
                                        <field name="total" sum="Total Amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="middel_expense_line" string="Company Expense Line" groups="middel_system_manegment.group_middel_east_manager">
                                <field name="middel_expense_line" mode="tree,kanban">
                                    <tree editable="bottom" limit="200">
                                        <field name="company_cost"/>
                                        <field name="charges"/>
                                        <field name="quantity"/>
                                        <field name="total_cost" sum="Total Amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="middel_east_tree_view" model="ir.ui.view">
            <field name="name">middel.east.tree.view</field>
            <field name="model">middel.east</field>
            <field name="arch" type="xml">
                <tree decoration-success="status == 'c_complete'"
                        decoration-bf="status == 'draft'"
                        decoration-info="status == 'approval'"
                        decoration-danger="status == 'sent'"
                        decoration-warning="status == 'waiting'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="phone"/>
                    <field name="project"/>
                    <field name="status"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="middel_east_kanban_view" model="ir.ui.view">
            <field name="name">middel.east.kanban.view</field>
            <field name="model">middel.east</field>
            <field name="arch" type="xml">
                <kanban sample="1" string="Kanban" class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <field name="partner_id"/>&#160;-&#160;

                                    <br/>
                                     <field name="date"/>&#160;-
                                    <br/>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="status" widget="label_selection"
                                                   options="{'classes': {'draft': 'info', 'quotations': 'warning','approval': 'warning','in_progress': 'warning', 'c_complete': 'success'}}"/>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="middel_east_calendar_view" model="ir.ui.view">
            <field name="name">middel.east.calendar.view</field>
            <field name="model">middel.east</field>
            <field name="arch" type="xml">
                <calendar string="Middel Service Details Calendar"
                          date_start="date"
                          event_open_popup="true"
                          mode="month"
                          color="user_id"
                          scales="day,month,year"
                          quick_create="False">
                    <field name="user_id" filters="1"/>
                   <field name="name"/>
                    <field name="partner_id"/>
                </calendar>
            </field>
        </record>
        <record id="middel_east_search_view" model="ir.ui.view">
            <field name="name">middel.east.search.view</field>
            <field name="model">middel.east</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group string="Group By">
                        <filter name="partner_id" string="Customer"
                                context="{'group_by': 'partner_id'}"/>
                        <filter name="user_id" string="Responsible"
                                context="{'group_by': 'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_middel_east" model="ir.actions.act_window">
            <field name="name">Order</field>
            <field name="res_model">middel.east</field>
            <field name="view_mode">tree,kanban,form,search,calendar,activity</field>
        </record>
        <record id="action_middel_services" model="ir.actions.act_window">
            <field name="name">Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
    </data>
</odoo>
