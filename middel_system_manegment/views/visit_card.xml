<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
    <record id="visit_card_contract_view" model="ir.ui.view">
            <field name="name">visit.card.form.view</field>
            <field name="model">visit.card</field>
            <field name="arch" type="xml">
                <form create="false">
                 <header>
                        <field name="status" widget="statusbar"/>
                        <button string="Set To Draft" name="set_to_draft" type="object" class="oe_highlight"
                                invisible="status not in  ('complete')" />
                        <button string="Complete" name="set_to_compleat" type="object" class="oe_highlight"
                                 invisible="status not in  ('draft')"/>

                    </header>
                    <sheet>
                        <group>
                             <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="building_type"/>
                             </group>
                              <group>
                                <field name="project_name"/>
                                <field name="area"/>
                             </group>
                        </group>
                        
                      
                        <div class="row">
                            <div class="col-6">
                                <label for="hdd">HDD</label>
                                <field name="hdd" />
                            </div>
                            <div class="col-6">
                                <field name="hdd1" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <label for="bullet_n">Bullet N</label>
                                <field name="bullet_n" />
                            </div>
                            <div class="col-4">
                                <label for="bullet_v">Bullet V</label>
                                <field name="bullet_v" />
                            </div>
                            <div class="col-4">
                                <label for="bullet_wdr_vf">Bullet WDR VF</label>
                                <field name="bullet_wdr_vf" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <label for="dome_n">Dome N</label>
                                <field name="dome_n" />
                            </div>
                            <div class="col-4">
                                <label for="dome_vf">Dome VF</label>
                                <field name="dome_vf" />
                            </div>
                            <div class="col-4">
                                <label for="dome_wdr_vf">Dome WDR VF</label>
                                <field name="dome_wdr_vf" />
                            </div>
                        </div>
                        <div>

                        <div class="row">
                            <div class="col-4">
                                <label for="full_system_working">Full System Working </label>
                                <field name="full_system_working" />
                            </div>
                             <div class="col-4">
                                <label for="full_system_cleaning">Full System Cleaning </label>
                                <field name="full_system_cleaning" />
                            </div>
                            <div class="col-4">
                                <label for="dvr_nvr_recording_30_days">DVR/NVR Recording 30 Days </label>
                                <field name="dvr_nvr_recording_30_days" />
                            </div>
                        </div>
                    </div>
                    <div>
                    </div>

                        <group>
                            <group>
                                <field name="technician_name"/>
                                <field name="watch_man"/>
                            </group>
                            <group>
                                <field name="watch_no"/>
                            </group>
                        </group>
                         <notebook>
                            <page string="Notes">
                                <div class="row">
                                    <div class="col-12">
                                        <label for="notes_before_visiting">Notes Before Visiting</label>
                                        <field name="notes_before_visiting"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <label for="notes_before_visiting">Notes Before Visiting</label>
                                        <field name="notes_after_visiting"/>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

         <record id="visit_card_tree_view" model="ir.ui.view">
            <field name="name">visit.card.tree.view</field>
            <field name="model">visit.card</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="project_name"/>
                    <field name="makani_no"/>
                    <field name="hdd"/>
                    <field name="technician_name"/>
                </tree>
            </field>
        </record>

        <record id="visit_card_calendar_view" model="ir.ui.view">
            <field name="name">visit.card.calendar.view</field>
            <field name="model">visit.card</field>
            <field name="arch" type="xml">
                <calendar string="Visit Card Calendar"
                          date_start="date"
                          event_open_popup="true"
                          mode="month"
                          color="name"
                          scales="day,month,year"
                          quick_create="False">
                   <field name="name"/>
                </calendar>
            </field>
        </record>
        <record id="visit_card_search_view" model="ir.ui.view">
    <field name="name">visit.card.search.view</field>
    <field name="model">visit.card</field>
    <field name="arch" type="xml">
        <search>
            <field name="partner_id"/>
            <group string="Group By">
                <filter name="name" string="Customer" context="{'group_by': 'partner_id'}"/>
            </group>
             <filter string="Today's Visits" name="today_visits" domain="[('date', '>=', context_today())]"/>
            <!--   <filter string="This Week" name="this_week_visits" 
                        domain="[('date', '>=', context_today() - timedelta(days=context_today().weekday())), ('date', '&gt;=', context_today())]"/>
                <filter string="This Month" name="this_month_visits" 
                        domain="[('date', '>=', context_today().replace(day=1)), ('date', '&gt;=', context_today())]"/>
                <filter string="This Year" name="this_year_visits" 
                        domain="[('date', '>=', context_today().replace(month=1, day=1)), ('date', '&gt;=', context_today())]"/> -->
        </search>
    </field>
</record>
